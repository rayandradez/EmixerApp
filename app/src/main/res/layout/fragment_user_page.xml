<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context="com.example.emixerapp.ui.screens.UserPage">

    <!-- Header elements (Car, Welcome, Back Button) - Sem alteração aqui -->
    <ImageView
        android:id="@+id/carImage"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Car icon"
        android:scaleType="fitCenter"
        android:src="@drawable/car_blue_suv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/latolight"
        android:text="@string/welcome"
        android:textColor="?android:textColorPrimary"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/carImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/carImage" />


    <!-- NOVO: ScrollView para o conteúdo principal. Isso é CRUCIAL para telas menores. -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carImage">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Top Card (Test Your Settings) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/testSettingsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/testSettingsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/latolight"
                        android:text="Test your settings"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Lottie Animation - Tamanho um pouco menor para retrato -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animationView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/testSettingsTitle"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/skull" />

                    <!-- Playback Controls -->
                    <LinearLayout
                        android:id="@+id/playbackControls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/animationView">

                        <ImageButton
                            android:id="@+id/btnPrevious"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Previous Track"
                            android:padding="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_previous"
                            app:tint="?android:textColorPrimary" />

                        <ImageButton
                            android:id="@+id/btnPlay"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Play"
                            android:padding="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_play"
                            app:tint="?android:textColorPrimary" />

                        <ImageButton
                            android:id="@+id/btnStop"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Stop"
                            android:padding="5dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_stop"
                            app:tint="?android:textColorPrimary" />

                        <ImageButton
                            android:id="@+id/btnNext"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Next Track"
                            android:padding="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_next"
                            app:tint="?android:textColorPrimary" />

                    </LinearLayout>

                    <!-- Track Seekbar (Playback Position) -->
                    <TextView
                        android:id="@+id/trackLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/latolight"
                        android:text="@string/track"
                        android:textColor="?android:textColorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/playbackControls" />

                    <SeekBar
                        android:id="@+id/playbackSeekBar"
                        style="@style/CustomSeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:max="100"
                        android:thumbTint="@color/light_grey_button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/trackLabel" />

                    <!-- Botão para selecionar a faixa - Posicionado no canto superior direito do card -->
                    <ImageButton
                        android:id="@+id/btnSelectTrack"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/circleborderbutton"
                        android:backgroundTint="?attr/colorPrimary"
                        android:contentDescription="Select Track"
                        android:padding="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_music_playlist"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@android:color/white" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bottom Card (EQ Controls, Pan, Volume) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/eqPanCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/testSettingsCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="24dp">

                    <!-- Vertical Seekbars (Bass, Mid, High, Volume) -->
                    <LinearLayout
                        android:id="@+id/verticalSeekbarsContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Bass -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/latolight"
                                android:text="@string/bass"
                                android:textColor="?android:textColorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <SeekBar
                                android:id="@+id/bassSeekBar"
                                style="@style/CustomSeekBar"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:max="100"
                                android:rotation="270"
                                android:thumbTint="@color/light_grey_button" />
                        </LinearLayout>

                        <!-- Mid -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/latolight"
                                android:text="@string/mid"
                                android:textColor="?android:textColorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <SeekBar
                                android:id="@+id/midSeekBar"
                                style="@style/CustomSeekBar"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:max="100"
                                android:rotation="270"
                                android:thumbTint="@color/light_grey_button" />
                        </LinearLayout>

                        <!-- High -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/latolight"
                                android:text="@string/high"
                                android:textColor="?android:textColorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <SeekBar
                                android:id="@+id/highSeekBar"
                                style="@style/CustomSeekBar"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:max="100"
                                android:rotation="270"
                                android:thumbTint="@color/light_grey_button" />
                        </LinearLayout>

                        <!-- Volume - MOVIDO AQUI -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/latolight"
                                android:text="@string/volume"
                                android:textColor="?android:textColorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <SeekBar
                                android:id="@+id/mainVolumeSeekBar"
                                style="@style/CustomSeekBar"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:max="100"
                                android:rotation="270"
                                android:thumbTint="@color/light_grey_button" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Pan Control -->
                    <LinearLayout
                        android:id="@+id/panContainer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/verticalSeekbarsContainer">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/latolight"
                            android:text="@string/pan"
                            android:textAlignment="center"
                            android:textColor="?android:textColorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/txtleft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/latolight"
                                android:text="@string/l"
                                android:textColor="?android:textColorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <SeekBar
                                android:id="@+id/panSeekBar"
                                style="@style/CustomSeekBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_toStartOf="@+id/txtright"
                                android:layout_toEndOf="@+id/txtleft"
                                android:max="100"
                                android:progress="50"
                                android:thumbTint="@color/light_grey_button" />

                            <TextView
                                android:id="@+id/txtright"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/latolight"
                                android:text="@string/r"
                                android:textColor="?android:textColorPrimary"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom Save/Reset Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveAudioSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/button_background_primary"
            android:fontFamily="@font/latolight"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:cornerRadius="30dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetAudioSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/button_background_secondary"
            android:fontFamily="@font/latolight"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="@string/reset"
            android:textColor="@color/button_text_secondary"
            android:textSize="24sp"
            app:cornerRadius="30dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
