<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.MVVMApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
        <item name="colorSurface">@color/card_background_color</item>
        <item name="colorOnSurface">@color/text_color_primary</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColor">@color/text_color_primary</item>

        <!-- ALTERAÇÃO AQUI: Usar a nova cor primary para o Light Mode -->
        <item name="colorPrimary">@color/light_mode_primary_color</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Texto sobre a cor primary (se o botão for primary, texto branco) -->

        <item name="android:fontFamily">@font/latoregular</item>
        <item name="android:statusBarColor">@color/light_mode_primary_color</item> <!-- Geralmente a status bar segue a primary color -->
    </style>

    <style name="Theme.MVVMApp" parent="Base.Theme.MVVMApp" />

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <!-- ALTERAÇÕES AQUI: Fundo e itens da Bottom Nav no Light Mode -->
        <item name="colorPrimary">@color/bottom_nav_background</item>
        <item name="colorOnSurface">@color/bottom_nav_item_color</item>
        <item name="colorSurface">@color/bottom_nav_background</item>
    </style>
</resources>
